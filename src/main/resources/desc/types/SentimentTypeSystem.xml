<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<name>Sentiment</name>
	<description>Type system for sentiment annotations</description>
	<version>1.7.0-SNAPSHOT</version>
	<vendor>Ubiquitous Knowledge Processing (UKP) Lab, Technische Universität Darmstadt</vendor>
	<types>
		<typeDescription>
			<name>de.tudarmstadt.ukp.dkpro.core.sentiment.type.StanfordSentimentAnnotation</name>
			<description>Stanford CoreNLP Sentiment annotation</description>
			<supertypeName>uima.tcas.Annotation</supertypeName>
			<features>
				<featureDescription>
					<name>veryNegative</name>
					<description>Value of veryNegative</description>
					<rangeTypeName>uima.cas.Double</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>negative</name>
					<description>Value of negative</description>
					<rangeTypeName>uima.cas.Double</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>neutral</name>
					<description>Value of neutral</description>
					<rangeTypeName>uima.cas.Double</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>positive</name>
					<description>Value of positive</description>
					<rangeTypeName>uima.cas.Double</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>veryPositive</name>
					<description>Value of veryPositive</description>
					<rangeTypeName>uima.cas.Double</rangeTypeName>
				</featureDescription>
			</features>
		</typeDescription>
	</types>
</typeSystemDescription>
